<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/shop_all_lin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/store_list_all_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="全部"
            android:textColor="@drawable/goods_textcolor_selector"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/store_list_num_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="销量"
            android:textColor="@drawable/goods_textcolor_selector"
            android:textSize="15sp"/>


        <Button
            android:id="@+id/store_list_price_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="价格"
            android:textColor="@drawable/goods_textcolor_selector"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/store_list_fresh_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="新品"
            android:textSize="15sp"/>
    </LinearLayout>

    <include layout="@layout/partline_line"/>

    <include layout="@layout/partline_view"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/base_margin"
        android:paddingRight="@dimen/base_margin"/>
</LinearLayout>




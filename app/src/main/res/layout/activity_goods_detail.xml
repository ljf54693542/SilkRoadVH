<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.rongshoo.silkroadvh.Activity.GoodsDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@mipmap/ic_title_back"
            android:visibility="visible"/>


        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/goods_detail"
            android:textSize="18sp"
            android:textColor="@color/text_color_black"/>

        <ImageView
            android:id="@+id/go_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@mipmap/ic_title_cart"
            android:visibility="visible"/>


    </LinearLayout>

    <include layout="@layout/partline_line"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="336dp"/>

            <include layout="@layout/partline_line"/>

            <TextView
                android:id="@+id/goods_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginRight="@dimen/base_margin"
                android:layout_marginTop="@dimen/margin_8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="新疆民族特色衣服 维吾尔族男士纯绵绸短袖T恤阿依古扎丽夏季男士"
                android:textColor="@color/text_color_black"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginRight="@dimen/base_margin"
                android:gravity="bottom"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥185"
                    android:textColor="@color/text_orange"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/price_old_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="￥30"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/sale_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售50"
                    android:textSize="12sp"/>

            </LinearLayout>

            <include layout="@layout/partline_view"/>

            <LinearLayout
                android:id="@+id/attr_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginRight="@dimen/base_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="商品规格"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"/>


                <ImageView
                    android:id="@+id/attr_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base_margin"
                    android:src="@mipmap/ic_home_right"/>

            </LinearLayout>

            <include layout="@layout/partline_line"/>

            <LinearLayout
                android:id="@+id/addr_lin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginRight="@dimen/base_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/addr_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="收货地址：成都市锦江区建设路28号阳光小筑"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"/>


                <ImageView
                    android:id="@+id/addr_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base_margin"
                    android:src="@mipmap/ic_home_right"/>

            </LinearLayout>

            <include layout="@layout/partline_line"/>

            <include layout="@layout/partline_view"/>

            <TextView
                android:id="@+id/appraise_num_tv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginRight="@dimen/base_margin"
                android:gravity="center_vertical"
                android:text="商品评价"/>

            <include layout="@layout/partline_line"/>

            <LinearLayout
                android:id="@+id/appraise_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="@dimen/base_margin"
                android:paddingRight="@dimen/base_margin"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/avatar_sdv"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        fresco:actualImageScaleType="focusCrop"
                        fresco:fadeDuration="300"
                        fresco:failureImage="@mipmap/default_img"
                        fresco:failureImageScaleType="focusCrop"
                        fresco:placeholderImage="@mipmap/default_img"
                        fresco:placeholderImageScaleType="focusCrop"
                        fresco:roundAsCircle="true"/>

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="Admin"
                        android:textColor="@color/text_color_gray"
                        android:textSize="14sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="非常漂亮的民族服装。质量，款式，价格都非常合理。值得推广。"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="2017-06-24"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/appraise_all_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/goods_detail_shape"
                    android:paddingBottom="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp"
                    android:text="查看所有评价"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>

            </LinearLayout>

            <include layout="@layout/partline_view"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginRight="@dimen/base_margin"
                android:gravity="center_vertical"
                android:text="商品详情"
                android:textColor="@color/text_color_black"
                android:textSize="14sp"/>

            <include layout="@layout/partline_line"/>

            <WebView
                android:id="@+id/web"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/base_margin"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:weightSum="7">
        <LinearLayout
            android:id="@+id/service_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/white">

            <ImageView
                android:id="@+id/tab_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/ic_goods_msg"/>

            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/tab_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/white">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/ic_goods_shop"/>

            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="店铺"
                android:textSize="12sp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/collect_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/white">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/ic_goods_star_normal"/>

            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="收藏"
                android:textSize="12sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/add_cart_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_weight="2"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/buy_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/text_orange"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="15sp"/>

    </LinearLayout>


</LinearLayout>



